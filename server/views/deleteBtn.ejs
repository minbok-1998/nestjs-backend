<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <button
      onclick="handleUserDelete('<%= customer[i].id %>')"
      type="button"
      class="deleteBtn btn btn-danger btn-sm"
    >
      삭제
    </button>

    <script>
      function handleUserDelete(id) {
        $.ajax({
          type: 'DELETE',
          url: `http://localhost:5000/user/list/${id}`,
          success: function (data) {
            console.log(data);
          },
          error: function (err) {
            console.log(err);
          },
        });
      }
    </script>
  </body>
</html>
